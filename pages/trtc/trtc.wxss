/* 1v1 视频电话模式 */
.template-1v1 {
    width: 100vw;
    height: 100vh;
    position: relative;
}

.pusher {
    width: 100%;
    height: 100%;
}

.player {
    width: 100%;
    height: 100%;
}

.adddd {
    width: 180rpx;
    height: 106rpx;
    position: absolute;
    right: 20rpx;
    top: 40rpx;
    z-index: 2;
    background-color: aqua;
}

.shootingType {
    width: 120rpx;
    height: 90rpx;
    position: absolute;
    left: 20rpx;
    top: 40rpx;
    z-index: 2;
    background-color: #0179FF33;
}

.shootingType-title, .shootingType-item {
    width: 100%;
    text-align: center;
    color: #ffffff;
    padding: 6rpx 0;
    box-sizing: border-box;
}

.shootingType-item {
    display: flex;
    justify-content: space-between;
    padding: 6rpx 10rpx;
}

.template-1v1 .pusher-container {
    width: 180rpx;
    height: 106rpx;
    position: absolute;
    right: 20rpx;
    top: 40rpx;
    z-index: 2;
}
.smallWindow{
  width: 180rpx !important;
  height: 106rpx !important;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  z-index: 2;
}

.template-1v1 .pusher-container.fullscreen {
    width: 100vw;
    height: 100vh;
    top: 0;
    right: 0;
}

.template-1v1 .loading {
    position: absolute;
    top: 10vh;
    left: 50vw;
    transform: translate(-50%, 0);
    width: 300rpx;
    height: 200rpx;
    border-radius: 12rpx;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
}

.template-1v1 .loading-img {
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: rotate 2s linear infinite;
}

.template-1v1 .rotate-img {
    width: 160rpx;
    height: 160rpx;
}

.template-1v1 .loading-text {
    width: 100%;
    padding-top: 40rpx;
    text-align: center;
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    50% {
        transform: rotate(180deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.template-1v1 .player-container:nth-child(1) {
    width: 100vw;
    height: 100vh;
}

.template-1v1 .handle-btns {
    position: absolute;
    z-index: 3;
    bottom: 15vh;
    width: 100vw;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.template-1v1 .bottom-btns {
    position: absolute;
    z-index: 3;
    bottom: 7vh;
    width: 100vw;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

