.btn-hangup {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    left: calc(50vw - 30rpx);
    bottom: 0;
    z-index: 9;
}

.switch, .flash, .audio {
    width: 50rpx;
    display: flex;
    justify-content: center;
}

.btn-switch, .btn-flash, .btn-audio, .btn-locating {
    width: 22rpx;
    height: 22rpx;
    margin-bottom: 10rpx;
    text-align: center;
}

.takingPictures {
    width: 50rpx;
    height: 50rpx;
    background-color: #777777;
    border-radius: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 10rpx;
}

.watermarking {
    position: absolute;
    left: 20rpx;
    bottom: 30rpx;
    z-index: 2;
    color: #3693ff;
}

.btn-takingPictures {
    width: 30rpx;
    height: 30rpx;
}

.right-operation {
    text-align: center;
    position: absolute;
    right: 20rpx;
    top: 156rpx;
    z-index: 2;
    margin-bottom: 10rpx;
}

.template-1v1 .btn-timer {
    position: relative;
    top: -30px;
    background: none;
    border: none;
    color: #fff;
}
