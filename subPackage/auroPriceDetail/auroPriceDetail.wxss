/* pages/pricingDetail.wxss */
page {
  height: 100%;
  width: 100%;
  --td-cell-title-color: #42AEFA !important;
  --td-cell-note-color: #333333 !important;
}

.table-body-item-box {
  display: flex;
  align-items: center;
}

.pricingDetail {
  height: calc(100vh - 190px) !important;
  width: 100%;
  background-color: #F2F2F2FF;
  padding: 20rpx;
  box-sizing: border-box;
}

.pricingDetail-container {
  background-color: #ffffff;
}

.margin-16 {
  margin: 16rpx;
}

.operation {
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  --td-button-primary-bg-color: #1989FA !important;
  --td-button-primary-border-color: #1989FA !important;
  --td-button-primary-outline-border-color: #1989FA !important;
  --td-button-primary-outline-color: #1989FA !important;
}

.operation-btn-box {
  width: calc(50% - 20rpx);
}

.operation-btn {
  width: 100%;
}

.custom-navbar {
  --td-navbar-color: #fff !important;
  --td-navbar-bg-color: #7393FF !important;
}

.pricingType {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;

}

.fruitDiameter,
.weight {
  width: 40%;
  border: 1px solid #E5E5E5;
  text-align: center;
  padding: 10rpx 0;
}

.fruitDiameter {
  border-top-left-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-left-radius: 40rpx;
  /* 高度的一半 */
}

.weight {
  border-top-right-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-right-radius: 40rpx;
  /* 高度的一半 */
}

.active-fruitDiameter {
  width: 40%;
  border: 1px solid #1989FA;
  text-align: center;
  padding: 10rpx 0;
  background-color: #1989FA;
  color: #ffffff;
  border-top-left-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-left-radius: 40rpx;
  /* 高度的一半 */
}

.active-weight {
  width: 40%;
  border: 1px solid #1989FA;
  text-align: center;
  padding: 10rpx 0;
  background-color: #1989FA;
  color: #ffffff;
  border-top-right-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-right-radius: 40rpx;
  /* 高度的一半 */
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.table-body {
  padding: 0 30rpx;
}

.table-header-item {
  color: #E7A927;
}

.table-body-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #F5F5F5;
  padding-bottom: 12rpx;
}

.tips {
  color: #E26F11;
  margin-bottom: 20rpx;
}

.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 0 40rpx;
  color: white;
}

.delete-btn {
  background-color: #e34d59;
}

.category-table {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.category-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.category-row {
  display: flex;
  border-bottom: 1px solid #eee;
}

.category-row:last-child {
  border-bottom: none;
}

.category-column {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-text {
  cursor: pointer;
}

.status-completed {
  color: #1989FA;
}

.status-incomplete {
  color: #999999;
}

.dialog-content {
  padding: 20rpx;
}

.dialog-message {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.title-with-icon {
  display: flex;
  align-items: center;
  color: #42AEFA;
}

.title-with-icon text {
  margin-right: 10rpx;
}

.category-option {
  padding: 10rpx 0;
}

.no-category-tip {
  text-align: center;
  color: #999;
  padding: 20rpx 0;
}

.dialog-content {
  padding: 20rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* Status colors */
.status-2 {
  color: #999999; /* 待采价 - gray */
}

.status-3 {
  color: #ff9800; /* 暂存 - orange */
}

.status-5 {
  color: #1989FA; /* 已完成 - blue */
}